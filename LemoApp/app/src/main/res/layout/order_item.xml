<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/box_y" />
    <ImageView
        android:id="@+id/delete"
        android:layout_marginTop="10dp"
        android:layout_marginStart="0dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/delete"
        />

    <ImageView
        android:id="@+id/fruit_image"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/fruits" />

    <TextView
        android:id="@+id/fruit_name"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_below="@+id/fruit_image"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custome_input"
        android:fontFamily="@font/some_timelater_w1j1n"
        android:text="ORDER ID:1208"
        android:textAlignment="center"
        android:textColor="@color/dark_b"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/dark_b"
        android:textSize="22dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="JD"
        android:textAlignment="center"
        android:textColor="@color/dark_b"
        android:textSize="22dp" />




</RelativeLayout>