<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_2"
    tools:context=".logInActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="431dp"
        android:fontFamily="@font/some_timelater_w1j1n"
        android:text="LEMO MALL"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="70dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:background="@color/yellow"
        android:hint="EMAIL"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/pass"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/yellow"
        android:hint="PASSWORD"
        android:textAlignment="center"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Forget Password!"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forget"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Don't Have an Account? Join Us Here "
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/signUp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/back_r_b" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="2022.Clever Mind POB"

        />

</RelativeLayout>