<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_4"
    tools:context=".checkOut">
    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_l_o" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/dark_b"
        android:fontFamily="@font/quicksand_bold"
        android:text="HOME"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="Thank You For Your Order \nYou Can Check You Order List from \nOrders Screen"
        android:textAlignment="center"
        android:textColor="#F3681E"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/some_timelater_w1j1n"
        android:text="GET A CHANCE\nTO WIN A FREE\n COUPONS!"
        android:textAlignment="center"
        android:textColor="#402414"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="our Paid Coupons prices "
        android:textAlignment="center"
        android:textColor="#F3681E"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="$150/ $100 / $80 / $50\n\t$30 / $20 / $10 /$5"
        android:textAlignment="center"
        android:textColor="#402414"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="+962795347341\n JORDAN-AMMAN\nClever Mind POB"
        android:textAlignment="center"
        android:textSize="12dp"

        />

</RelativeLayout>