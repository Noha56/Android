<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b_3"
    tools:context=".SignUp">

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_l_w" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_book"
        android:layout_marginTop="20dp"
        android:text="SIGN UP"
        android:textSize="17dp"
        android:textColor="@color/dark_b"
        android:layout_marginStart="55dp"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:background="@color/white"
        android:hint="NAME"
        android:textAlignment="center"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="PASSWORD"
        android:textAlignment="center"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/email"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/phone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="EMAIL"
        android:textAlignment="center"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="PASSWORD"
        android:textAlignment="center"
        android:textColorHint="@color/black" />
<RadioGroup
    android:id="@+id/pay"
    android:layout_below="@+id/pass"
    android:layout_marginTop="30dp"
    android:layout_marginStart="70dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioButton
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:text="CASH"
        android:fontFamily="@font/quicksand_bold"
        />
    <RadioButton
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:text="VISA"
        android:textAlignment="center"
        android:fontFamily="@font/quicksand_bold"
        />
</RadioGroup>

    <ImageView
        android:id="@+id/sign_in"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/pay"
        android:layout_marginStart="95dp"
        android:src="@drawable/back_r_b" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="2022.Clever Mind POB"

        />

</RelativeLayout>