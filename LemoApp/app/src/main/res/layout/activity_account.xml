<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trans_b_4"
    tools:context=".Account">

    <TextView
        android:id="@+id/title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="446dp"
        android:fontFamily="@font/some_timelater_w1j1n"
        android:text="THE\nLEMO MALL"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="275dp"
        android:text="Healthy Mall in Your Hand"

        android:textAlignment="center"
        android:textColor="@color/blue" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_l_o" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="ACCOUNT"
        android:textColor="@color/dark_b"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@color/yellow"
        android:hint="NAME"
        android:textAlignment="center"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/name"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/yellow"
        android:hint="PASSWORD"
        android:textAlignment="center"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/email"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/phone"
    android:layout_centerInParent="true"
        android:background="@color/yellow"
        android:hint="EMAIL"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:background="@color/yellow"
        android:layout_marginTop="10dp"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/black" />
    <RadioGroup
        android:id="@+id/pay"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/pass"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:text="CASH"
            android:fontFamily="@font/quicksand_bold"
            />
        <RadioButton
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:text="VISA"
            android:textAlignment="center"
            android:fontFamily="@font/quicksand_bold"
            />
    </RadioGroup>

    <ImageView
        android:id="@+id/left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/pay"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/backror" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="SAVE"
        android:textColor="@color/dark_b"
        android:textSize="20dp"

        />


</RelativeLayout>