<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="270dp"
  >

    <ImageView
        android:id="@+id/item_background"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/item_orange" />

    <ImageView
        android:layout_width="33dp"
        android:layout_height="109dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/side_count" />
        <ImageView
            android:id="@+id/plus"
            android:layout_width="30dp"
            android:layout_marginTop="110dp"
            android:layout_marginRight="19dp"
            android:layout_marginStart="2dp"
            android:layout_height="23dp"
            android:src="@drawable/plus" />
        <ImageView
            android:id="@+id/minus"
            android:layout_width="30dp"
            android:layout_marginTop="155dp"
            android:layout_marginRight="19dp"
            android:layout_marginStart="1dp"
            android:layout_height="23dp"
            android:src="@drawable/minus2" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">

        <RadioButton
            android:id="@+id/item_btn"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:buttonTint="#222222"
            android:checked="true"
            android:fontFamily="@font/raleway_semi_bold"
            android:text="S A N D W I S H\n5 JD"
            android:textSize="15dp" />


        <RadioButton
            android:id="@+id/meal_btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:buttonTint="#222222"
            android:fontFamily="@font/raleway_semi_bold"
            android:text="M E A L\n6 JD"
            android:textColor="#222222"
            android:textSize="15dp" />

    </RadioGroup>

        <TextView
            android:id="@+id/num_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:gravity="center"
            android:text="0"
            android:textColor="#222222"
            android:textSize="25dp"
            android:textStyle="bold"

            />


</RelativeLayout>