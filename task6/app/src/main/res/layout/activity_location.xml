<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/locations"
    android:id="@+id/drawer"
    tools:context=".location">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/back"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/back_icon" />
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/files_and_folders" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/raleway_semi_bold"
        android:text="L O C A T I O N"
        android:textColor="#99C432" />


        <ImageView
            android:layout_width="300dp"
            android:layout_height="450dp"
            android:layout_centerInParent="true"
            android:src="@drawable/item_yellow" />

        <ImageView
            android:id="@+id/burger"
            android:layout_width="153dp"
            android:layout_height="135dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:src="@drawable/i_burger_logo" />

        <ImageView
            android:layout_width="600dp"
            android:layout_height="200dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            android:src="@drawable/halfo" />

        <ImageView
            android:layout_width="212dp"
            android:layout_height="134dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="102dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/i_burger_logo" />

        <TextView
            android:id="@+id/loc"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/burger"
            android:layout_marginStart="60dp"
            android:fontFamily="@font/raleway_bold"
            android:text="A M M A N - A B D O O N"
            android:textColor="#dF5516"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/loc"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="31dp"
            android:fontFamily="@font/raleway_bold"
            android:text="0 7 9 5 3 4 7 3 4 1"
            android:textColor="#99C432 "
            android:textSize="24dp" />


    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/menu"
        android:layoutDirection="rtl"
        app:menu="@menu/menu1" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/files_and_folders"/>


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>