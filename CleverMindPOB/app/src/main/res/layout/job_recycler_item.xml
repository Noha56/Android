<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

    <ImageView
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/custom_input" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/broshk"
        android:text="@string/android_dev"
        android:textAlignment="center"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/exp"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/broshk"

        android:text="@string/years_exp_2"
        android:textAlignment="center"
        android:textSize="17dp" />


    <TextView
        android:id="@+id/attend"
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_below="@+id/exp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/broshk"
        android:text="@string/ATTENDNOW"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/android" />

    <ImageView

        android:id="@+id/upload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/attend"
        android:src="@drawable/up" />

    <TextView
        android:id="@+id/cv"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:layout_below="@+id/upload"
        android:layout_marginStart="275dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/broshk"
        android:text="@string/cv"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="15dp" />


</RelativeLayout>